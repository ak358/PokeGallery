@functions {
    // URLからポケモンのIDを取得するメソッド
    public string GetPokemonIdFromUrl(string url)
    {
        // URLを"/"で分割し、最後の要素を取得
        string[] segments = url.Split('/');
        string id = segments[segments.Length - 2]; // 最後から2番目の要素がIDになる
        return id;
    }
}
